@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

<h2>Update Blog Page</h2>
<br />
@using(Html.BeginForm("Update","Blog",FormMethod.Post))
{
    @Html.Label("Id")
    @Html.TextBoxFor(x=>x.BlogId,new {@class="form-control"})
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x=>x.BlogTitle,new {@class="form-control"})
    <br />
    @Html.Label("Thumbnail Url")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage,new {@class="form-control"})
    <br />
    @Html.Label("Image")
    @Html.TextBoxFor(x=>x.BlogImage,new {@class="form-control"})
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.list2,new {@class="form-control"})
    <br />
    @Html.Label("İçerik")
    @Html.TextBoxFor(x=>x.BlogContent,new {@class="form-control"})
    <br />
    <button class="btn btn-success">Güncelle</button>
}


