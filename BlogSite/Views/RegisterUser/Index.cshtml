@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="/admin2/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="/admin2/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/admin2/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="/admin2/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="/admin2/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
     
            <h3>Kayıt Ekranı</h3>
            <p>Yeni Bir Hesap Oluşturma</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.nameSurname" placeholder="Ad-Soyad" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="UserName" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Password" asp-for="@Model.Password" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="@Model.ConfirmPassword">
                </div>

                <div class="form-group">
                        <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login">Login</a>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="/admin2/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="/admin2/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="/admin2/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="/admin2/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>

